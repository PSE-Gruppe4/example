<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneFragmentHeight"
        android:layout_marginTop="@dimen/toolbarHeight"
        android:background="@color/white">


        <TextView
            android:id="@+id/eventsInSubcategoryIndicatorWhereUserIsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/eventsInSubcategoryCreateEventTV"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:text="@string/eventsInSubcategory"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eventsInSubcategoryCreateEventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/eventsInSubcategoryCreateEventIV"
            android:text="@string/createEvent" />

        <ImageView
            android:id="@+id/eventsInSubcategoryCreateEventIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="57dp"
            android:layout_marginRight="57dp"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/ic_baseline_create_24px"
            tools:layout_editor_absoluteX="344dp"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eventsInSubcategoryEventRV"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_event" />

    </RelativeLayout>
</layout>