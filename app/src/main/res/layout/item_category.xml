<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="itemCategoryViewModel"
            type="com.example.asus.example.mvvm.ViewModel.ItemCategoryViewModel" />
    </data>


    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
        android:id="@+id/item_category"
        android:layout_height="@dimen/itemRVHeight">

        <TextView
            android:id="@+id/categoryNameTV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pictureRVSize"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="212dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="212dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{itemCategoryViewModel.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>