<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="itemPostViewModel"
            type="com.example.asus.example.mvvm.ViewModel.ItemPostViewModel"/>

    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemRVHeight"
    android:id="@+id/item_post"
    android:background="@color/graylight">


    <ImageView
        android:id="@+id/thumbsDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thumbsUp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureOfUserWhoPostedIV"
        app:layout_constraintVertical_bias="0.909"
        android:onClick="@{itemPostViewMode::unlike}"
        app:srcCompat="@drawable/ic_thumb_down_icon" />

    <ImageView
        android:id="@+id/thumbsUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:onClick="@{itemPostViewModel::like}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureOfUserWhoPostedIV"
        app:srcCompat="@drawable/ic_thumb_ub_icon" />

    <TextView
        android:id="@+id/datePostTV"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@{itemPostViewModel.date}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/wherePostedTV"
        app:layout_constraintTop_toBottomOf="@+id/postTV"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/wherePostedTV"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="@{itemPostViewModel.numberOfLikes}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameOfUserWhoPostedTV"
        app:layout_constraintTop_toBottomOf="@+id/postTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameOfUserWhoPostedTV"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="@{itemPostViewModel.numberOfLikes}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbsUp"
        app:layout_constraintTop_toBottomOf="@+id/postTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/postTV"
        android:layout_width="279dp"
        android:layout_height="86dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@{itemPostViewModel.post}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pictureOfUserWhoPostedIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/postTV"
        app:layout_constraintStart_toStartOf="parent"
        app:imageUrl="@{itemPostViewModel.imageUrl}"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
</layout>